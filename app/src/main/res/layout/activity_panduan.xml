<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.home.PanduanActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_panduan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Panduan Aplikasi"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_panduan">

        <ImageView
            android:id="@+id/iv_panduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/panduan_aplikasi_image"
            android:contentDescription="Gambar Panduan Aplikasi"/>

    </ScrollView>

</RelativeLayout>